{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
 
    "baseUrl": "./Assets/TypeScript/",              /* Specify the base directory to resolve non-relative module names. */
    "lib": [
      "DOM",
      "ES2015"
    ],                                              /* Specify a set of bundled library declaration files that describe the target runtime environment. */
    "module": "ES6",                                /* Specify what module code is generated. */
    "moduleResolution": "Node",                     /* Specify how TypeScript looks up a file from a given module specifier. */
    "noEmitOnError": true,                          /* Disable emitting files if any type checking errors are reported. */
    "noImplicitAny": false,                         /* Enable error reporting for expressions and declarations with an implied 'any' type. */
    "outDir": "./wwwwroot/js",                      /* Specify an output folder for all emitted files. */
     "paths": {                                     /* Specify a set of entries that re-map imports to additional lookup locations. */
      "@services/*" :[ "components/*"],
      "@models/*" : ["models/*"],
      "@modules/*" : ["modules/*"]
     },           
    "removeComments": true,                         /* Disable emitting comments. */
    "rootDir": "./Assets/TypeScript/",                                  
    "sourceMap": true,                              /* Create source map files for emitted JavaScript files. */
    "sourceRoot": "./Assets/TypeScript/",           /* Specify the root path for debuggers to find the reference source code. */
    "forceConsistentCasingInFileNames": true,       /* Ensure that casing is correct in imports. */
    "target": "ES5"
  },
  "exclude": [
    "node_modules",
    "wwwwroot"
  ]
}
